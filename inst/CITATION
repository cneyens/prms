citHeader("To cite the R package prms in publications, please use:")

vers = paste('R Package version', meta$Version)

citEntry(entry = 'manual',
		author = 'Cas Neyens',
		title = 'prms: R functions for facilitating the reading and writing of PRMS input and output files',
		year = '2017',
		note = vers, 
		url = 'https://github.com/cneyens/prms',
		textVersion = "Cas Neyens (2017). prms: R functions for facilitating the reading and writing of PRMS input and output files. R package version 0.1.0  https://github.com/cneyens/prms"
		)

citEntry(entry = 'book',
		  author = 'Markstrom, S.L.,  Regan, R.S., Hay, L.E., Viger, R.J., Webb, R.M.T., Payn, R.A. and LaFontaine, J.H.',
		  title = 'PRMS-IV, the precipitation-runoff modeling system, version 4',
		  year = '2015',
		  publisher = 'U.S. Geological Survey',
		  series = 'Techniques and methods',
		  issue = 'book 6',
		  chapter = 'B7',
		  pages = '158',
		  doi = 'http://dx.doi.org/10.3133/tm6B7',
		  textVersion = 'Markstrom, S.L., Regan, R.S., Hay, L.E., Viger, R.J., Webb, R.M.T., Payn, R.A., and LaFontaine, J.H., 2015, PRMS-IV, the precipitation-runoff modeling system, version 4: U.S. Geological Survey Techniques and Methods, book 6, chap. B7, 158 p., http://dx.doi.org/10.3133/tm6B7'

		  )